{
  "name": "calculator-app",
  "version": "1.0.0",
  "description": "This is a solution to the calculator app challenge on Frontend Mentor",
  "main": "./dist/server",
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": ["server/*", "src/*"],
    "ignore": ["tests/*", "*.test.js"]
  },
  "scripts": {
    "start": "npm-run-all build server",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/server",
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "dev": "nodemon",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafaVls/calculator-app.git"
  },
  "keywords": [
    "calculator",
    "webdev",
    "node",
    "javascript",
    "jest"
  ],
  "author": "Rafael Avil√©s",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafaVls/calculator-app/issues"
  },
  "homepage": "https://github.com/rafaVls/calculator-app#readme",
  "devDependencies": {
    "jest": "^27.0.6",
    "nodemon": "^2.0.12"
  },
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.9",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
